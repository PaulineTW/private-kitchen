<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edit my booking</h3>
        <%= simple_form_for [@kitchen, @booking] do |f| %>
          <%= f.input :date, placeholder: 'Date' %>
          <%= f.input :timeslot, collection: ['16:00 - 18:00', '17:00 - 19:00', '18:00 - 20:00'], selected: '16:00 - 18:00', label: 'Select a timeslot' %>
          <%= f.input :guests, collection: 1..6, selected: 1, label: 'Choose how many guests' %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
