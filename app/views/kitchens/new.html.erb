<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a private kitchen</h3>
        <%= simple_form_for [@kitchen] do |f| %>
          <%= f.input :title, placeholder: 'Enter catchy title for your private kitchen' %>
          <%= f.input :cuisine, placeholder: 'Enter your cuisine' %>
          <%= f.input :description, placeholder: 'Enter a description' %>
          <%= f.input :price, placeholder: 'Enter the price' %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
